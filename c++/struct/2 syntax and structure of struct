
syntax and structure of struct
#include<iostream>
#include<bits/stdc++.h>
using namespace std;

struct point                            //struct data type to include differnt type of 
{                                    // datatype in single datatype.
    int x;                             //declare the struct befor use
    int y;
    char z;
    string s;
};

int main()
{
    struct point p={10,20,'z',"king"}; //in it object is created and every datatype is initialised in same line 
                                            //now here u need to define the struct and assign tthe values
    //p.x=10;
    //p.y=20;
    //p.z= 'c';
    //p.s="king";
    
     
    cout<<p.x<<" "<<p.y<<"  addition of ponits "<< p.x + p.y;
    cout<<endl<<"the character is "<<p.z;
    cout<<endl<<"the string is "<<p.s;
    return 0;
    
}

//output 
10 20  addition of ponits 30
the character is z
the string is king
