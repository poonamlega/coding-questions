
//basic class and making it public and accessible

#include<bits/stdc++.h>
using namespace std ;
class point
{ public:             //method to make the class public so that it can be accessed
    int x;
                            // output 10
};

class derived  : public point  //derived class is public now  
{  void print(){
    cout<<x;}
};

int main()
{
 derived p;
 p.x = 10;   // now the class can be accessed as they are public now
 cout<< p.x;
 
return 0;    
}
